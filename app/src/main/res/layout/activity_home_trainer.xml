<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeTrainer">

    <ImageView
        android:id="@+id/ivBacktoLogin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:background="@drawable/rounded_borders"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/outline_arrow_left_alt_24"
        android:contentDescription="@string/back"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivBacktoLogin"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="10dp"
        android:gravity="end">
        <LinearLayout
            android:id="@+id/llOrder"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/rounded_borders"
            android:gravity="center"
            tools:ignore="UselessParent">
            <ImageView
                android:id="@+id/ivUpDownArrow"
                android:layout_marginStart="10dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/black_border"
                android:src="@drawable/outline_keyboard_arrow_down_24"
                android:contentDescription="@string/order_arrow"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/order_arrow"
                android:layout_margin="10dp"
                android:textColor="@color/black"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>

    <TableLayout
        android:id="@+id/tlWorkoutsTable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ivBacktoLogin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:divider="@color/black"
        android:showDividers="middle"
        android:stretchColumns="1">
        <TableRow tools:ignore="UselessParent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="@string/workout_name"
                android:textStyle="bold"
                android:background="@drawable/cell_border"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="@string/level"
                android:textStyle="bold"
                android:background="@drawable/cell_border"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="@string/total_time"
                android:textStyle="bold"
                android:background="@drawable/cell_border"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="@string/expected_time"
                android:textStyle="bold"
                android:background="@drawable/cell_border"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="@string/date"
                android:textStyle="bold"
                android:background="@drawable/cell_border"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="@string/done_exercises_porcent"
                android:textStyle="bold"
                android:background="@drawable/cell_border"/>
        </TableRow>
    </TableLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tlWorkoutsTable">
        <Button
            android:id="@+id/btnCreateWorkout"
            android:text="@string/create_workout"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"/>
        <Button
            android:id="@+id/btnEditWorkout"
            android:text="@string/edit_workout"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"/>
        <Button
            android:id="@+id/btnDeleteWorkout"
            android:text="@string/delete_workout"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>